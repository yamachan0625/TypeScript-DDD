{
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "compilerOptions": {
    "outDir": "./dist",
    "strict": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "*": ["./src/*"]
    },
    "esModuleInterop": true,
    "experimentalDecorators": true, // デコレータ許可
    "emitDecoratorMetadata": true
  },
  "include": ["src/**/*.ts", "src/**/*.js", "setupJest.ts"]
}
